extends admin_dashboard.jade
block vars
  - var title = 'Edit'
block div
            .col-md-9
                if errors && errors.length > 0
                    .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                        button.close(type="button" data-dismiss="alert" aria-label="Close")
                            span(aria-hidden="true") ×
                        p= errors
                if success && success.length > 0
                    .alert.alert-success.alert-dismissible.fade-in(role="alert")
                        button.close(type="button" data-dismiss="alert" aria-label="Close")
                            span(aria-hidden="true") ×
                        p= success
                // Latest Users
                .panel.panel-default
                  .panel-heading.main-color-bg
                    h3.panel-title Edit Administrator
                  .panel-body
                    form(method="POST" action="/admins/#{data.admin._id}/edited")
                        .input-group
                            span.input-group-addon First Name
                            input.form-control(type="text", name="admin_firstname" value="#{data.admin.firstname}")
                        br
                        br
                        .input-group
                            span.input-group-addon Last Name
                            input.form-control(type="text", name="admin_lastname" value="#{data.admin.lastname}")
                        br
                        br
                        .input-group
                            span.input-group-addon Phone
                            input.form-control(type="text", name="admin_phone" value="#{data.admin.phone}")
                        br
                        br
                        .input-group
                            span.input-group-addon Email
                            input.form-control(type="email", name="admin_email" value="#{data.admin.email}")
                        br
                        br

                        .input-group
                            span.input-group-addon Username
                            input.form-control(type="text", name="admin_username" value="#{data.admin.username}")
                        br
                        br
                        .input-group
                            span.input-group-addon Role
                            select.form-control(type="text", name="admin_role" value="#{data.admin.role}")
                                if (data.admin.role === 'super admin')
                                    option(selected="selected") super admin
                                    option admin
                                else 
                                    option super admin
                                    option(selected="selected") admin
                        br
                        br
                        input.btn.pull-right.btn-md.blue(type="submit" value="Save")