extends admin_dashboard.jade
block vars
  - var title = 'Technicians'
block div
            .col-md-9
                if errors && errors.length > 0
                    .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                        button.close(type="button" data-dismiss="alert" aria-label="Close")
                            span(aria-hidden="true") ×
                        p= errors
                if success && success.length > 0
                    .alert.alert-success.alert-dismissible.fade-in(role="alert")
                        button.close(type="button" data-dismiss="alert" aria-label="Close")
                            span(aria-hidden="true") ×
                        p= success
                // Latest Users
                .panel.panel-default
                  .panel-heading.main-color-bg
                    h3.panel-title Latest Technicians
                  .panel-body
                    table.table.table-striped.table-hover.table-bordered.table-condensed.table-responsive
                      tr
                        th.text-center Name
                        th.text-center Email
                        th.text-center Phone
                        th
                      each teker in data.tekers
                        tr
                            td.text-center= teker.firstname+' '+teker.lastname
                            td.text-center= teker.email
                            td.text-center= teker.phone
                            td.text-center
                              span 
                                a.btn.btn-sm.edit-btn(href='/tekers/#{teker._id}/edit')
                                    i.fa.fa-pencil.fa-fw
                                    | Edit 
                              span 
                                a.btn.btn-sm.red(href='/tekers/#{teker._id}/delete') 
                                    i.fa.fa-trash-o.fa-fw(aria-hidden="true")
                                    | Delete

                                  

