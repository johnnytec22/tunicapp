extends base

block vars
    - var title = "Register"

block body

        nav.navbar.navbar-default
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Sitename
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li.active
                            a(href='/user/login') Login

        header#header
            .container
                .row
                    .col-md-12
                        h1.text-center(style="font-family:Comfortaa;")
                            | User Registeration
        section(style="font-family:Comfortaa;")#main
            .container
                .row
                    br
                    br
                    h3.text-center You are one-step away, Please register and <br/>get your work done.
                    br
                    if errors && errors.length > 0
                        .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                            button.close(type="button" data-dismiss="alert" aria-label="Close")
                                span(aria-hidden="true") ×
                            p= errors
                    if success && success.length > 0
                        .alert.alert-success.alert-dismissible.fade-in(role="alert")
                            button.close(type="button" data-dismiss="alert" aria-label="Close")
                                span(aria-hidden="true") ×
                            p= success
                    br
                    .col-md-4.col-md-offset-4.col-sm-5.col-sm-offset-3.col-xs-12
                        form( method="POST")
                            .input-group
                                span.input-group-addon First Name
                                input.form-control(type="text", name="firstname")
                            br
                            br
                            .input-group
                                span.input-group-addon Last Name
                                input.form-control(type="text", name="lastname")
                            br
                            br
                            .input-group
                                span.input-group-addon Email
                                input.form-control(type="email", name="email")
                            br
                            br
                            .input-group
                                span.input-group-addon Phone
                                input.form-control(type="text", name="phone")
                            br
                            br
                            .input-group
                                span.input-group-addon Address
                                input.form-control(type="text", name="address")
                            br
                            br
                            .input-group
                                span.input-group-addon Town
                                input.form-control(type="text", name="town")
                            br
                            br
                            .input-group
                                span.input-group-addon City
                                input.form-control(type="text", name="city")
                            br
                            br
                            .input-group
                                span.input-group-addon Country
                                input.form-control(type="text", name="country")
                            br
                            br
                            .input-group
                                span.input-group-addon Username
                                input.form-control(type="text", name="username")
                            br
                            br
                            .input-group
                                span.input-group-addon Password
                                input.form-control(type="password", name="password")
                            br
                            br
                            input.btn.btn-danger.pull-right.btn-md(type="submit" value="Register")